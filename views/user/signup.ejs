<% layout('/layouts/boilerplatecode.ejs') %>
    <div class="row mt-4">
        <div class="col-md-6 offset-md-3 offset-md-1">
            <h1>Sign Up</h1>
            <br>
            <form action="/signup" method="post" novalidate class="needs-validation">

                <div class="mb-2">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" placeholder="Enter Username" class="form-control" id="username"
                        required>
                    <div class="invalid-feedback">Username is Required</div>
                </div>

                <div class="mb-2">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" placeholder="Enter Your Email ID" class="form-control" id="email"
                        required>
                    <div class="invalid-feedback">Email is Required</div>
                </div>

                <div class="mb-2">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" placeholder="Enter Password" class="form-control"
                        id="password" required>
                    <div class="invalid-feedback">Password is Required</div>
                </div>
                <br>
                <button class="btn btn-success mb-5 submit-btn">Sign Up</button>

            </form>
        </div>
    </div>