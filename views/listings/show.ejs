<% layout('/layouts/boilerplatecode.ejs') %>

    <div class="row mt-3 show-card">
        <div class="col-7 mb-3">
            <h3>
                <%= listing.title %>
            </h3>
        </div>
        <div class="card-listing col-7">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">

            <div class="card-body mb-1">
                <div class="card-text">
                    <p class="card-text">
                        Owned By &nbsp;
                        <i>
                            <%=listing.owner.username%>
                        </i>
                    </p>
                    <p class="card-text">
                        <%= listing.description %>
                    </p>

                    <p class="card-text">
                        &#8377; <%= listing.price.toLocaleString("en-IN") %>
                    </p>
                    <p class="card-text">
                        <%= listing.location %>
                    </p>
                    <p class="card-text">
                        <%= listing.country %>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="show-buttons mb-4 offset-2">
        <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn col-1 mb-2 offset-1">Edit</a>
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
            <button class="btn btn-dark offset-2">Delete</button>
        </form>
    </div>

    <hr>
    <div class="col-10 mb-5">
        <div class="offset-3">
            <h4>Leave a Review</h4>
            <br>
            <form action="/listings/<%= listing._id %>/reviews" method="post" class="needs-validation" novalidate>
                <input type="range" max="5" min="1" class="form-range" name="review[rating]">
                <br>
                <br>
                <label for="comment" class="form-label">Comment</label>
                <textarea name="review[comment]" id="comment" class="form-control" col="10" rows="5"
                    required></textarea>
                <div class="invalid-feedback">Please submit some comments for review</div>
                <br>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
            <br>
            <div>
                <p><b>All Reviews</b></p>
                <div class="row">
                    <% for(let reviews of listing.reviews) { %>
                        <div class="card col-5 ms-3 mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Jane</h5>
                                <p class="card-text">
                                    <%= reviews.comment %>
                                </p>
                                <p class="card-text">
                                    <%= reviews.rating %> Stars
                                </p>
                                <form class="mt-3"
                                    action="/listings/<%= listing._id %>/reviews/<%= reviews._id %>?_method=DELETE"
                                    method="post">
                                    <button class="btn btn-dark btn-sm">Delete</button>
                                </form>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>
    </div>