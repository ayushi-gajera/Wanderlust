<% layout('/layouts/boilerplatecode.ejs') %>

    <body>
        <h1 class="mt-3">Listings</h1>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-5">
            <% for(let listing of allListings) { %>
                <a href="/listings/<%= listing._id %>" class="listing_link">
                    <div class="card-listing" style="width: 18rem;">
                        <img src="<%= listing.image %>" class="card-img-top" alt="listing_image"
                            style="height: 20rem; width:20rem">
                        <div class="card-img-overlay" style="width:20rem"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b>
                            </p>
                            <p>&#8377;<%= listing.price.toLocaleString("en-IN")%> / night
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>
    </body>